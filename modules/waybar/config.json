{
  "layer": "top",
  "margin-top": 14,
  "margin-bottom": 0,

  "include": [
    "~/.config/waybar/modules.json"
  ],

  "modules-left": [
    "wlr/taskbar",
    "hyprland/window"
  ],

  "modules-center": [
    "hyprland/workspaces"
  ],

  "modules-right": [
    "pulseaudio",
    "bluetooth",
    "battery",
    "group/hardware",
    "network",
    "clock"
  ]

  "group/hardware": {
    "orientation": "horizontal",
    "modules": [
      "disk",
      "cpu",
      "memory"
    ]
  }
};
